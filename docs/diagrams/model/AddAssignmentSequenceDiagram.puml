@startuml
!include ../style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":ModuleListParser" as ModuleListParser LOGIC_COLOR
participant ":AddAssignmentParser" as AddAssignmentParser LOGIC_COLOR
participant "a:AddAssignmentCommand" as AddAssignmentCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
participant ":Module" as Module MODEL_COLOR
end box

[-> LogicManager : execute("addassignment n/CS2100 a/Quiz 1 %/5 r/0.8")
activate LogicManager

LogicManager -> ModuleListParser : parseCommand("addassignment n/CS2100 a/Quiz 1 %/5 r/0.8")
activate ModuleListParser

create AddAssignmentParser
ModuleListParser -> AddAssignmentParser
activate AddAssignmentParser

AddAssignmentParser --> ModuleListParser
deactivate AddAssignmentParser

ModuleListParser -> AddAssignmentParser : parse("n/CS2100 a/Quiz 1 %/5 r/0.8")
activate AddAssignmentParser

create AddAssignmentCommand
AddAssignmentParser -> AddAssignmentCommand
activate AddAssignmentCommand

AddAssignmentCommand --> AddAssignmentParser : a
deactivate AddAssignmentCommand

AddAssignmentParser --> ModuleListParser : a
deactivate AddAssignmentParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
AddAssignmentParser -[hidden]-> ModuleListParser
destroy AddAssignmentParser

ModuleListParser --> LogicManager : a
deactivate ModuleListParser

LogicManager -> AddAssignmentCommand : execute()
activate AddAssignmentCommand

AddAssignmentCommand -> Model : getFilteredModuleList()
activate Model

Model --> AddAssignmentCommand
deactivate Model

AddAssignmentCommand --> Module : addAssignment("Quiz 1")
activate Module

Module --> AddAssignmentCommand
deactivate Module

create CommandResult
AddAssignmentCommand -> CommandResult
activate CommandResult

CommandResult --> AddAssignmentCommand
deactivate CommandResult

AddAssignmentCommand --> LogicManager :
deactivate AddAssignmentCommand

[<--LogicManager
deactivate LogicManager
@enduml
